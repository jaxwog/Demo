<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyz.animation.AnimationMainActivity">

    <Button
        android:id="@+id/button_moving"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#ff0000"
        android:text="MovingButton" />

    <Button

        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ff00"
        android:text="layout_Animation" />
    <Button

        android:id="@+id/button_activity"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0000ff"
        android:text="activity_Animation" />
    <Button

        android:id="@+id/button_getandset"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f0f0f0"
        android:text="属性动画" />
</LinearLayout>
