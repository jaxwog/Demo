<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyz.window.WindowMainActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/win_add"
        android:background="@drawable/shape_draw_gradient_linear"
        android:text="添加过程"/>
    <Button
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/win_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/win_toast"
        android:background="@drawable/shape_draw_gradient_linear"
        android:text="Toast展示"/>

</android.support.constraint.ConstraintLayout>
